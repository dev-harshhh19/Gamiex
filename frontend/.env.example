# Amazon Product API Configuration
# For production, you would add real API keys here

# Example: RapidAPI Amazon Data Scraper
REACT_APP_RAPIDAPI_KEY=your_rapidapi_key_here
REACT_APP_RAPIDAPI_HOST=amazon-data-scraper.p.rapidapi.com

# Example: Amazon Product Advertising API
REACT_APP_AMAZON_ACCESS_KEY=your_amazon_access_key
REACT_APP_AMAZON_SECRET_KEY=your_amazon_secret_key
REACT_APP_AMAZON_ASSOCIATE_TAG=your_associate_tag

# API Configuration
REACT_APP_API_BASE_URL=https://api.amazon-data-service.com
REACT_APP_API_TIMEOUT=10000

# Feature Flags
REACT_APP_USE_MOCK_DATA=true
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_DURATION=300000

# Debug Mode
REACT_APP_DEBUG_API=false
